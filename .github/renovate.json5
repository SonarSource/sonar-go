{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>SonarSource/renovate-config:languages-team"
  ],
  "schedule": [
    "before 4am on Monday"
  ],
  "rebaseWhen": "conflicted",
  "cloneSubmodules": true,
  "cloneSubmodulesFilter": [
    "build-logic/common"
  ],
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "github-actions",
    "gomod",
    "git-submodules",
    "regex"
  ],
  "git-submodules": {
    "enabled": true
  },
  // Match both standard .github/workflows and custom .github-public/workflows directories for GitHub Actions updates.
  // Renovate _extends_ default config, see https://docs.renovatebot.com/modules/manager/#file-matching.
  "github-actions": {
    "managerFilePatterns": [
      "/^\\.github-public/workflows/[^/]+\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^gradle.properties$"
      ],
      "matchStrings": [
        "goVersion\\s*=\\s*(?<currentValue>[^\\s#]+)"
      ],
      "depNameTemplate": "go",
      "packageNameTemplate": "go",
      "depTypeTemplate": "golang",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "go-mod-directive"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "SonarSource/*"
      ],
      "pinDigests": false,
      "groupName": "all Sonar GitHub Actions",
      "groupSlug": "all-sonar-github-actions"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "!SonarSource/*"
      ],
      "pinDigests": true,
      "groupName": "all third-party GitHub Actions",
      "groupSlug": "all-3rd-party-github-actions"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackageNames": [
        "!org.sonarsource.api.plugin:sonar-plugin-api*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackageNames": [
        "org.sonarsource.api.plugin:sonar-plugin-api*"
      ],
      "groupName": "sonar-plugin-api",
      "groupSlug": "sonar-plugin-api",
      "prHeader": "**Before updating the plugin-api version, make sure to check the [compatibility matrix](https://github.com/SonarSource/sonar-plugin-api?tab=readme-ov-file#compatibility) and stick to the lowest denominator.**"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchFileNames": [
        "sonar-go-to-slang/**/go.mod",
        "!sonar-go-to-slang/resources/**/go.mod"
      ],
      "matchPackageNames": [
        "!go"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "all non-major Go dependencies",
      "groupSlug": "all-go-minor-patch"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchFileNames": [
        "sonar-go-to-slang/**/go.mod",
        "!sonar-go-to-slang/resources/**/go.mod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": true
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchFileNames": [
        "private/go-package-data-exporter/**/go.mod"
      ],
      "matchPackageNames": [
        "!go"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "additional Go dependencies",
      "groupSlug": "additional-go-dependencies",
      "prHeader": "**Don't forget to run the package data generator to align the generated files with the new dependencies.**"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchFileNames": [
        "private/its/**"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
      ]
    },
    {
      "matchManagers": [
        "git-submodules"
      ],
      "matchDepNames": [
        "private/its/sources/**"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "rangeStrategy": "bump",
      "prHeader": "**Don't forget to run the package data generator to align the generated files with the new Go version.**"
    },
    {
      "matchManagers": [
        "regex"
      ],
      "matchDatasources": [
        "golang-version"
      ],
      "versioning": "go-mod-directive"
    }
  ],
  "reviewers": [
    "team:security-cloud-squad"
  ]
}
